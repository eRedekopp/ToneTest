<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/rampButton"
        android:layout_width="275dp"
        android:layout_height="75dp"
        android:layout_marginTop="50dp"
        android:text="Ramp Test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pureButton"
        android:layout_width="275dp"
        android:layout_height="75dp"
        android:layout_marginTop="25dp"
        android:text="Pure Tone Test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rampButton" />

    <Button
        android:id="@+id/heardButton"
        android:layout_width="275dp"
        android:layout_height="75dp"
        android:layout_marginTop="25dp"
        android:text="Heard Tone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confidenceButton" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="275dp"
        android:layout_height="75dp"
        android:layout_marginTop="25dp"
        android:text="Save Calibration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heardButton" />

    <Button
        android:id="@+id/confidenceButton"
        android:layout_width="275dp"
        android:layout_height="75dp"
        android:layout_marginTop="25dp"
        android:text="Confidence Test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/autoButton" />

    <Button
        android:id="@+id/autoButton"
        android:layout_width="275dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Auto Test"
        app:layout_constraintBottom_toTopOf="@+id/confidenceButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pureButton" />
</android.support.constraint.ConstraintLayout>